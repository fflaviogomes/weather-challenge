<div id="clima" />

<% unless @weather.blank? %>

  <%= render 'favorite_cities/form_addfav' %>

  <h2><%= @weather.temperature %>&ordm;F | 
      <%= @weather.temperatureC %>&ordm;C 
  </h2>

  <table>
    <tbody>
      <tr>
        <td>Pressão</td>
        <td><%= @weather.pressure %>hpa</td>
      </tr>
      <tr>
        <td>Umidade</td>
        <td><%= @weather.humidity %>%</td>
      </tr>
      <tr>
        <td>Temperatura Mín.</td>
        <td><%= @weather.min_temperature %>&ordm;F | 
            <%= @weather.min_temperatureC %>&ordm;C
        </td>
      </tr>
      <tr>
        <td>Temperature Máx.</td>
        <td><%= @weather.max_temperature %>&ordm;F | 
            <%= @weather.max_temperatureC %>&ordm;C
        </td>
      </tr>
      <tr>
        <td>Velocidade do Vento</td>
        <td><%= @weather.wind_speed %>mi/h</td>
      </tr>
    </tbody>
  </table>

<% end %>

</div>

<hr>

<div>
  <%= form_with id: "formulario", url: "/",  local: false, method: :get do |form| %>
    <%= form.label :f_cidade, "Pesquisar cidade:" %>
    <%= form.text_field :f_cidade, value: @weather&.city  %>
    <%= form.submit "Enviar", data: { disable_with: "Atualizando..." } %>
  <% end %>
</div>

<hr>

<div id="cidades_favoritas">
  
  <%= render 'favorite_cities/form' %>

</div>